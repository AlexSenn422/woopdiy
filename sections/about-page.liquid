<section class="page-section single-page-section">
  <div class="centered">
    <h1 class="section-title">{{ page.title }}</h1>
    {% if section.settings.top_image != blank %}
      <img class="single-page-title-image" width="100%" src="{{ section.settings.top_image | img_url: '1600x' }}">
    {% endif %}
  </div>
  <div class="section-separator"></div>
</section>
<section class="page-section dont-pad neg-top light-bg">
  <div class="centered asided">
    <aside>
      {{ page.content }}
    </aside>
    <aside class="image-middle">
      <img class="" width="100%" src="{{ section.settings.bottom_image | img_url: '800x' }}">
    </aside>
  </div>
</section>

{% schema %}
{
  "name": "About Us Content",
  "class": "index-section",
  "settings": [
    {
        "type": "image_picker",
        "id": "top_image",
        "label": "Top image"
    },{
        "type": "image_picker",
        "id": "bottom_image",
        "label": "Bottom image"
    }
  ]
}
{% endschema %}